<?xml version="1.0" encoding="UTF-8"?>
<Base:BaseContentView xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:WMSControls="clr-namespace:WMS.CustomControls;assembly=WMS"
    xmlns:WMSComponents="clr-namespace:WMS.Components;assembly=WMS"
    xmlns:WMSUtils="clr-namespace:WMS.Utils;assembly=WMS"
    xmlns:Base="clr-namespace:WMS.Components;assembly=WMS"        
    x:Class="WMS.Components.WMSDYKUI">
    <Base:BaseContentView.Content>
        <StackLayout>
            <WMSControls:WMSLabel  x:Name="lblHeader"
                Text="{StaticResource DidYouKnowText}"
                TextColor="Black"
                FontAttributes="Bold">
            </WMSControls:WMSLabel>
            <BoxView HeightRequest="2"
                BackgroundColor="Black" Margin="0,0,0,15">
            </BoxView>
            <WMSComponents:WMSLinkLabelUI x:Name="lblWatchDemo"
                TitleText="{StaticResource ClickToWatchDemoText}" />
            <WMSControls:WMSLabel x:Name="lblOr"
                Text="OR"
                TextColor="Black">
            </WMSControls:WMSLabel>            
            <WMSComponents:WMSLinkLabelUI x:Name="lblDownloadWalkthroughs"
                TitleText="{StaticResource DownloadWalkThroughText}" Margin="0,0,0,10"/>          
            <WMSComponents:WMSLinkLabelUI x:Name="lblFAQs"
                TitleText="{StaticResource SeeFAQText}" Margin="0,0,0,40"/>                      
        </StackLayout>
    </Base:BaseContentView.Content>
    <Base:BaseContentView.Resources>
        <ResourceDictionary>
            <x:String x:Key="DidYouKnowText">Did You Know?</x:String>
            <x:String x:Key="ClickToWatchDemoText">Click here to watch the Demo</x:String>
            <x:String x:Key="DownloadWalkThroughText">Download walkthrough (PDF)</x:String>
            <x:String x:Key="SeeFAQText">See FAQ's for more details</x:String>            
        </ResourceDictionary>
    </Base:BaseContentView.Resources>
</Base:BaseContentView>